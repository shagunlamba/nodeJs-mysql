<!DOCTYPE html>
<html lang="en">
<head>
  <title>Table</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/styles.css">
  <link rel="icon" type="image/png" href="/table.png">
</head>
<body>
    <div id="main">

    <h1> Search in the table using data </h1>

    <form method="post" action="/upload/search">
        <p>
            <label>
              <input name="data" type="radio" value="Name" checked />
              <span>Name</span>
            </label>
          </p>
          <p>
            <label>
              <input name="data" type="radio" value="RollNo" />
              <span>Roll Number</span>
            </label>
          </p>
              <input type="text" name="dataToSearch" placeholder="Search.." id="first_name2" required>
              <label class="" for="first_name2"></label>
          <button type="submit" class="btn">Search</button>
    </form>



    <div class="table-data">
        <table border="1">
            <tr id="header">
                <th>Sr. No.</th>
                <th>Full Name</th>
                <th>Roll Number</th>
                <th>Class</th>
            </tr>
            
            <%
            if(userData.length!=0){
            var i=1;
            userData.forEach(function(data){
            %>
            <tr>
                <td><%=i; %></td>
                <td><%=data.Name %></td>
                <td><%=data.RollNo %></td>
                <td><%=data.Class %></td>
            </tr>
            <%  i++; }) %>
            <% } else{ %>
                <tr>
                    <td colspan="7">No Data Found</td>
                </tr>
            <% } %>
        </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>